@model MyApp.Models.ViewModel.ProductVM

@{
    ViewData["Title"] = "Edit";
}

<br />
<h1>@((Model.Product==null || Model.Product.ProductId ==0)?"Create":"Update") Product</h1>


<div class="row">
    <div class="col-md-8">
        <form method="post" asp-action="CreateUpdate" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ProductId" />
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label"></label>
                <input asp-for="Product.ProductName" class="form-control" />
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <textarea asp-for="Product.Description" class="form-control"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" /><br />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label">Category</label>
                <select asp-for="Product.CategoryId" asp-items = "@Model.Categories" class="form-control">
                <option disabled>--Select Category--</option>
                </select><br />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model.Product == null || Model.Product.ProductId == 0)
                {
                    <input type="submit" value="Create" class="btn btn-primary" />
                    
                }
                else
                {
                    <input type="submit" value="Update" class="btn btn-primary" />

                }
            </div>
        </form>
    </div>
</div><br />

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial"/>
}