

<div class="container p-4">
    <div class= "row p-3">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="CreateUpdate" asp-controller ="Product" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add New</a>
          
        </div>
    </div>
</div>

  <table id="myTable" class="table table-hover mt-4">
  <thead class="table-dark text-white">
    <tr>
      <th scope="col">Id</th>
      <th scope = "col"> Image Product</th>
      <th scope="col">Product Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Category Name</th>
      <th scope="col">Action</th>

    </tr>
  </thead>
  <tbody>
       
  </tbody>
</table>

@section scripts{
    <script src="~/js~/js/Product.js"></script>
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>    
    <script type="text/javascript">
       
        $(function(){
            var save = '@TempData["save"]'
            if(save!='') {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if(edit!='') {
                alertify.warning(edit);
            }
            var del = '@TempData["delete"]'
            if (del!='') {
                alertify.warning(del);
            }
        })
    </script>
}


