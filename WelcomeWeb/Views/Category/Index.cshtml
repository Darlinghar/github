        </div>
    </div>
</div>

  <table class="table table-hover mt-4">
  <thead class="table-dark text-white">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Order Replace</th>
      <th scope="col">Date Created</th>
      <th scope="col">Action</th>

    </tr>
  </thead>
  <tbody>
        @foreach(var item in Model)
        {
            <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td>@item.OrderPlace</td>
            <td>@item.CreateDate</td>
            <td>
            <a asp-action="Edit" asp-controller ="Category" class="btn btn-success" asp-route-id="@item.CategoryId"><i class="bi bi-pencil-square"></i> Edit</a>
            <a asp-action="Edit" asp-controller ="Category" class="btn btn-dangar" asp-route-id="@item.CategoryId"><i class="bi bi-pencil-square"></i> Delete</a>
            
        </td>
            </tr>
        }
  </tbody>
</table>

